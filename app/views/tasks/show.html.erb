<h1>タスク詳細ページ</h1>

<table class="table table-bordered">
  <tr>
    <th>タスク名</th>
    <td><%= @task.title %></td>
  </tr>
  <tr>
    <th>内容</th>
    <td><%= @task.content %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @task.status %></td>
  </tr>
</table>

<%= link_to '編集する', edit_task_path(@task), class: "btn btn-default" %>
<%= link_to '削除する', @task, method: :delete, data: { confirm: '本当に削除してもよろしいですか？'}, class: "btn btn-danger" %>