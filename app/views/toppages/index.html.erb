<% else %>

  <div class="center jumbotron">
    <div class="text-center">
      <h1>タスクリスト</h1>
      <p><%= link_to 'ユーザ登録', signup_path, class:"btn btn-lg btn-primary" %></P>
      <p><%= link_to 'ログイン', login_path, class:"btn btn-lg btn-primary" %></P>
    </div>
  </div>
<% end %>